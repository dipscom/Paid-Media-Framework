package com.pedrotavares.paidmedia.utils.loopThruChildren{	import flash.display.MovieClip;	import flash.display.DisplayObjectContainer;	public class LoopThruChildren	{		// Instatiate a empty array to hold the initial array		public var mChildren:Array;		// Instatiate a empty array to hold the shuffled array		public var arr_shuffled:Array = []; // TO DO: DO WE NEED TWO VARIABLES? CAN'T THIS BE COMPRESSED INTO ONE?		public function LoopThruChildren(mClip:MovieClip)		{			//trace("Loop class found and the parent mc is ", mClip.name);			mChildren = getChildrenOf(mClip);		}				public function shuffleArray(arr:Array):Array		{			//trace(arr);			// Loop thru the original array and shuffle it			while( arr.length > 0)			{				arr_shuffled.push(arr.splice(Math.round(Math.random() * (arr.length - 1)), 1)[0]);			}			// Return the shuffled array			return arr_shuffled;		}				private function getChildrenOf(mClip:DisplayObjectContainer):Array		{			// Create an empty array to store the children			var temp:Array = [];			// Create a variable for the number of children			var nChildren:Number = mClip.numChildren;			//trace(nChildren);			// Loop thru the children and add them to the array			for ( var i:int = 0; i < nChildren; i++ )			{				temp.push(mClip.getChildAt(i));			}			// Return the array			return temp;		}	}}