package com.pedrotavares.paidmedia.platforms.base{	// CUSTOM CLASSE IMPORTS	import com.pedrotavares.paidmedia.events.PaidMediaEvent;	// FLASH IMPORTS	import flash.display.MovieClip;	import flash.display.Stage;	import flash.events.Event;	import flash.events.MouseEvent;	public class BaseRich extends MovieClip	{		// Get the instance of the clicktag		protected var clicktag_mc:MovieClip;		public function BaseRich():void		{			// Do nothing		}				protected function setupAd():void		{			trace("[BASERICH] setupAd");			// Initiate a new clicktag			clicktag_mc = new MovieClip();			// Listen to the mouse events			clicktag_mc.addEventListener(MouseEvent.CLICK, baseClick);			clicktag_mc.addEventListener(MouseEvent.MOUSE_OVER, baseMouseOver);			clicktag_mc.addEventListener(MouseEvent.MOUSE_OUT, baseMouseOut);			// Listen for the when the swf is added to stage			clicktag_mc.addEventListener(Event.ADDED_TO_STAGE, startBaseRich);			// Add the clicktag_mc to the stage			addChild(clicktag_mc);		}				private function startBaseRich(e:Event):void		{			//trace("[BASERICH] startBaseRich");			// Clicktag details			clicktag_mc.name = "clicktag_mc";			clicktag_mc.graphics.beginFill(0xFF0000);			clicktag_mc.graphics.drawRect(0, 0, 10, 10);			clicktag_mc.graphics.endFill();			clicktag_mc.width = stage.stageWidth;			clicktag_mc.height = stage.stageHeight;			clicktag_mc.buttonMode = true;			clicktag_mc.alpha = 0;			// Dispatch the start of the ad			dispatchEvent( new PaidMediaEvent( PaidMediaEvent.UNIT_INITIALISED ) );		}				private function baseClick(e:MouseEvent):void		{ 			trace("[BASERICH] onClick");			dispatchEvent( new PaidMediaEvent( PaidMediaEvent.CLICK_CLICKTAG ) );		}				private function baseMouseOver(e:MouseEvent):void		{			dispatchEvent( new PaidMediaEvent( PaidMediaEvent.MOUSE_OVER ) );		}				private function baseMouseOut(e:MouseEvent):void		{			dispatchEvent( new PaidMediaEvent( PaidMediaEvent.MOUSE_OUT ) );		}	}}