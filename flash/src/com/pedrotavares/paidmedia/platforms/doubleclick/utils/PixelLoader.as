package com.pedrotavares.paidmedia.platforms.doubleclick.utils{	import flash.display.Sprite;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.Event;	import flash.events.IOErrorEvent;	public class PixelLoader extends Sprite	{		private var isLoaded	:Boolean;		public function PixelLoader(url:String):void		{			// Check if the tracking pixel has loaded			if( ! isLoaded ) {				// The pixel is not loaded, load it				trace( "Loading pixel..." );				// Random number to be used				var rand	:Number	= Math.floor( Math.random() * 10000000 );				// The url string given by the user with the random number at the end				var url		:String = url + rand;				// The loader to call in the pixel url				var loader	:Loader = new Loader();				// Listen for the loading events				loader.contentLoaderInfo.addEventListener( Event.COMPLETE, pixelLoaded );				loader.contentLoaderInfo.addEventListener( IOErrorEvent.IO_ERROR, pixelFailed );				// Load the pixel now				loader.load( new URLRequest( url ) );				// Set its loaded status to true				isLoaded = true;				trace(url);			}		}				private function pixelLoaded(e:Event):void		{			trace("Pixel loaded successfully.");		}				private function pixelFailed(e:Event):void		{			trace("Pixel failed to load.");		}	}}