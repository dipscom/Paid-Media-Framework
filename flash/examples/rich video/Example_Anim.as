package {	// CUSTOM IMPORTS	import com.pedrotavares.paidmedia.events.PaidMediaEvent;	// GREENSOCK IMPORTS	import com.greensock.TweenMax;	import com.greensock.TimelineMax;	//FLASH IMPORTS	import flash.display.MovieClip;	public class Example_Anim extends MovieClip	{		// Variables to use in the tween animation		private var bg_mc:MovieClip;		private var border_mc:MovieClip;		private var tt_mc:MovieClip;		// Greensock timelines		private var main_tl:TimelineMax;		public function Example_Anim(stageItems:Object)		{			// Assign the movie clips from the stage to the variables to use here			bg_mc = stageItems.bg_mc;			border_mc = stageItems.border_mc;			tt_mc = stageItems.tt_mc;						main_tl = new TimelineMax( {paused:true, onComplete:eventComplete} );						main_tl.from(tt_mc, 1, {alpha:0} );		}				public function startAnimation():void		{			trace("StartAnim");			main_tl.play();		}				private function eventComplete():void		{			dispatchEvent( new PaidMediaEvent( PaidMediaEvent.COMPLETED ) );		}	}}