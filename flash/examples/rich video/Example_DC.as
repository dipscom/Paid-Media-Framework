package {	// CUSTOM IMPORTS	import Example_Anim;	import com.pedrotavares.paidmedia.events.PaidMediaEvent;	//FLASH IMPORTS	import flash.display.MovieClip;	import flash.events.Event;	public class Example_DC extends MovieClip	{		public var stageItems:Object;		public var thisAnim:Example_Anim;		public function Example_DC()		{			// Grab all the movieclip instance names for the stage			this.stageItems = {								bg_mc:bg_mc,								border_mc:border_mc,								tt_mc:tt_mc								};											// Initialize the animation class			thisAnim = new Example_Anim(stageItems);			// Listen for the added to stage			thisAnim.addEventListener( Event.ADDED_TO_STAGE, onStage );			// Listeners			addEventListener( PaidMediaEvent.COMPLETED, playTrailer );						addChild(thisAnim);		}				private function onStage(e:Event):void		{			trace("On added to stage");			thisAnim.startAnimation();		}				private function playTrailer(e:PaidMediaEvent):void		{			trace("Play video");		}	}}